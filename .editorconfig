root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.sass]
indent_size = 2

[*.scss]
indent_size = 2

[{*.bash,*.zsh,*.sh}]
indent_size = 2
tab_width = 2

[{*.cjs,*.js,*.jsx}]
indent_size = 2
tab_width = 2

[{*.ts,*.ats,*.tsx}]
indent_size = 2
tab_width = 2

[{.eslintrc,.babelrc,.stylelintrc,jest.config,.prettierrc,bowerrc,*.json,*.jsb3,*.jsb2,*.graphqlconfig}]
indent_size = 2
